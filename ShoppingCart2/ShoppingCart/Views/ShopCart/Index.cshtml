@model ShoppingCart.ViewModels.ShopCartViewModel

@{
    ViewBag.Title = "Shopping Cart";
    int page_size = 4;
    int pages = (int) (Math.Ceiling((double) Model.CartItems.Count / page_size));
}

@section scripts {
<script src="~/Scripts/jquery.twbsPagination-1.3.1.min.js"></script>    

<script type="text/javascript">
    $(function () {
        window.pagObj = $('#pagination').twbsPagination({
            totalPages: @pages,
            visiblePages: 10,
            onPageClick: function (event, page) {
                var start_index = (page - 1) * @page_size;
                var end_index = start_index + @page_size;
                end_index = (end_index > (@Model.CartItems.Count)) ? (@Model.CartItems.Count) : end_index;
                console.info(page + ' (from options)');
                console.info("Showing item " + start_index);
                console.info("Until " + end_index)
                
                $(".product").addClass("hidden")
                $(".product").slice(start_index, end_index).removeClass("hidden")
                $("#pageInfo").text("Showing " + (start_index + 1) + "-" + (end_index) + " of @Model.CartItems.Count");
            }
        });
    });
</script>

<script type="text/javascript">

    $(document).ready(function () {

        handleUpdate();

        $(".RemoveLink").click(function () {

            // Get the id from the link
            var recordToDelete = $(this).attr("data-id");

            if (recordToDelete != '') {

                $.ajax({
                    url: '/ShopCart/RemoveFromCart/' + recordToDelete,
                    method: 'post',
                    contentType: 'application/json',
                    dataType: 'json',
                    success: function (data) {
                        // Update the page elements
                        if (data.ItemCount == 0) {
                            $('#row-' + data.DeleteID).fadeOut('slow');
                        } else {
                            $('#item-count-' + data.DeleteID).text(data.ItemCount);
                        }

                        $('#cart-total').text(data.CartTotal);
                        $('#update-message').text(data.Message);
                        $('$cart-status').text('Cart (' + data.CartCount + ')');
                    }
                })
            }
        });

        function handleUpdate() {
            // Load and deserialize the returned JSON data
            var json = context.get_data();
            var data = Sys.Serialization.JavaScriptSerializer.deserialize(json);

            // Update the page elements
            if (data.ItemCount == 0) {
                $('#row-' + data.DeleteID).fadeOut('slow');
            } else {
                $('#item-count-' + data.DeleteID).text(data.ItemCount);
            }

            $('#cart-total').text(data.CartTotal);
            $('#update-message').text(data.Message);
            $('$cart-status').text('Cart (' + data.CartCount + ')');
        }
    });



